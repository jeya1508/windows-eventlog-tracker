<div class="add-device-container">
   <h2>Add device</h2>
   <form {{on "submit" this.addDevice}} class="add-device-form">
        <div class="form-group">
        <label for="deviceName">Device Name</label>
        <input type="text" id="deviceName" value={{this.model.deviceName}} {{on "input" (fn this.updateField "deviceName")}} placeholder="Enter a unique device name" >
        </div>
        <div class="form-group">
        <label for="ip-address">IP Address</label>
        <input type="text" id="ipAddress" value={{this.model.ipAddress}} {{on "input" (fn this.updateField "ipAddress")}} placeholder="Enter IP address (Example: 143.33.64.132)" >
        </div>
        <div class="form-group">
        <label for="hostName">User name</label>
        <input type="text" id="userName" value={{this.model.userName}} {{on "input" (fn this.updateField "userName")}} placeholder="Enter a valid user name" >
        </div>
        <div class="form-group">
        <label for="password">Password</label>
        <input type="password" id="password" value={{this.model.password}} {{on "input" (fn this.updateField "password")}} placeholder="Enter the password" >
        </div>
        <button type="submit" class="btn-submit">Add device</button>
  </form>  
  <div class="back-button-container">
    <button class="back-button" type="button" {{on "click" this.redirectToSearch}}>
      Back 
    </button>
  </div>
</div>