<div class="alert-profile-container">
  <h2>Add Alert Profile</h2>
  <form {{on "submit" this.addAlertProfile}} class="add-alert-form">
    <div class="form-group">
      <label for="profileName">Profile Name</label>
      <input type="text" id="profileName" {{on "input" (fn this.updateField "profileName")}} placeholder="Enter a unique name" required>
    </div>
    <div class="form-group">
      <label for="criteria">Criteria</label>
      <input type="text" id="criteria" {{on "input" (fn this.updateField "criteria")}} placeholder="Give a criteria(Example:event_id=1)" required>
    </div>
    <div class="form-group">
      <label for="notifyEmail">Email for notification</label>
      <input type="text" id="notifyEmail" {{on "input" (fn this.updateField "notifyEmail")}} placeholder="Give email to get notified for alerts" required>
    </div>
    {{#if this.errorMessage}}
      <div class="error-message">{{this.errorMessage}}</div>
    {{/if}}

    <button type="submit" class="btn-submit">Add profile</button>
  </form>
 
</div>

