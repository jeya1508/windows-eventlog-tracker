<div class="login-container">
  <h2>Login</h2>
  <form {{on "submit" this.submitLogin}} class="login-form">
    <div class="form-group">
      <label for="email">Email</label>
      <input type="email" id="email" {{on "input" this.updateEmail}} placeholder="Enter your email" required>
    </div>
    
    <div class="form-group">
      <label for="password">Password</label>
      <input type="password" id="password" {{on "input" this.updatePassword}} placeholder="Enter your password" required>
    </div>

    <button type="submit" class="submit-btn">Login</button>
  </form>
  <div class="google-signin-container">
    <button class="google-signin-btn" type="button" {{on "click" this.signInWithGoogle}}>
      <img src="assets/google_logo.png" alt="Google Logo" class="google-logo" />
      Sign in with Google
    </button>
</div>
<div class = "new-user-info">
  <p>New to Event Tracker? <a href="/register">Sign up now</a></p>
</div>
</div>
